{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",

        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "composite": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Import Aliases */
        "baseUrl": ".",
        "paths": {
            "+styles/*": ["styles/*"]
        }
    }
}
